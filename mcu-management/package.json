{
  "name": "mcu-management",
  "version": "1.0.0",
  "description": "Aplikasi Web Manajemen Medical Check Up (MCU)",
  "main": "index.html",
  "scripts": {
    "dev": "echo 'Run: cd mcu-management && npx tailwindcss -i ./css/input.css -o ./css/output.css --watch'",
    "build": "sh -c 'rm -rf dist && mkdir -p dist && for item in *; do [ \"$item\" != \"dist\" ] && [ \"$item\" != \"node_modules\" ] && [ \"$item\" != \".git\" ] && cp -r \"$item\" dist/; done && echo \"Build output: dist/\"'",
    "build:css": "npx tailwindcss -i ./css/input.css -o ./css/output.css --minify",
    "build:dev": "npx tailwindcss -i ./css/input.css -o ./css/output.css"
  },
  "keywords": ["mcu", "medical", "checkup", "management"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "dependencies": {
    "dexie": "^3.2.4",
    "chart.js": "^4.4.0",
    "chartjs-plugin-datalabels": "^2.2.0"
  }
}
